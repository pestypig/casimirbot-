{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "artifactSpec.schema.json",
  "title": "ArtifactSpec",
  "type": "object",
  "required": ["id", "name", "requiredFields", "evidenceKinds", "freshnessDays"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "requiredFields": { "type": "array", "minItems": 1, "items": { "type": "string" } },
    "evidenceKinds": { "type": "array", "minItems": 1, "items": { "type": "string" } },
    "freshnessDays": { "type": "integer", "minimum": 1 },
    "ownerRole": { "type": "string" },
    "templatePath": { "type": "string" },
    "notes": { "type": "string" }
  }
}
