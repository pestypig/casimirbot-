{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "workflowSpec.schema.json",
  "title": "WorkflowSpec",
  "type": "object",
  "required": ["id", "kind", "requiredChecks", "requiredArtifacts", "gates", "reviewCadenceDays"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string" },
    "kind": { "type": "string", "enum": ["entrepreneur.rung", "curiosity.dividend"] },
    "rung": { "type": "string", "enum": ["R0", "R1", "R2", "R3", "R4", "R5", "R6"] },
    "scores": {
      "type": "object",
      "required": ["demand", "capability", "integritySafety", "sustainability"],
      "additionalProperties": false,
      "properties": {
        "demand": { "$ref": "#/definitions/scoreMin" },
        "capability": { "$ref": "#/definitions/scoreMin" },
        "integritySafety": { "$ref": "#/definitions/scoreMin" },
        "sustainability": { "$ref": "#/definitions/scoreMin" }
      }
    },
    "requiredChecks": { "type": "array", "minItems": 1, "items": { "type": "string" } },
    "requiredArtifacts": { "type": "array", "minItems": 1, "items": { "type": "string" } },
    "gates": { "type": "array", "items": { "type": "string" } },
    "reviewCadenceDays": { "type": "integer", "minimum": 1 },
    "valuesRefs": { "type": "array", "items": { "type": "string" } },
    "outcomeMetrics": { "type": "array", "items": { "type": "string" } },
    "riskLevel": { "type": "string", "enum": ["low", "medium", "high"] },
    "notes": { "type": "string" }
  },
  "definitions": {
    "scoreMin": {
      "type": "object",
      "required": ["min"],
      "additionalProperties": false,
      "properties": {
        "min": { "type": "integer", "minimum": 0, "maximum": 4 }
      }
    }
  }
}
