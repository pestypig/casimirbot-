{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "crosswalk.schema.json",
  "title": "Ethos Crosswalk",
  "type": "object",
  "required": ["version", "source", "checks"],
  "additionalProperties": false,
  "properties": {
    "version": { "type": "integer", "minimum": 1 },
    "source": { "type": "string" },
    "checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "nodeRefs"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "nodeRefs": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
          },
          "requiredArtifacts": {
            "type": "array",
            "items": { "type": "string" }
          },
          "notes": { "type": "string" }
        }
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["artifactId", "title", "nodeRefs", "requiredChecks"],
        "additionalProperties": false,
        "properties": {
          "artifactId": { "type": "string" },
          "title": { "type": "string" },
          "templatePath": { "type": "string" },
          "nodeRefs": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
          },
          "requiredChecks": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}
