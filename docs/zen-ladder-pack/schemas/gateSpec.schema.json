{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "gateSpec.schema.json",
  "title": "GateSpec",
  "type": "object",
  "required": ["id", "name", "appliesTo", "requiredChecks", "approvals", "audit"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string", "pattern": "^[a-z0-9\\-\\.]+$" },
    "name": { "type": "string" },
    "appliesTo": {
      "type": "object",
      "required": ["workflowKinds"],
      "additionalProperties": false,
      "properties": {
        "workflowKinds": { "type": "array", "items": { "type": "string" } },
        "rungs": { "type": "array", "items": { "type": "string" } },
        "riskLevels": {
          "type": "array",
          "items": { "type": "string", "enum": ["low", "medium", "high"] }
        }
      }
    },
    "requiredChecks": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },
    "approvals": {
      "type": "object",
      "required": ["minApprovers", "roles"],
      "additionalProperties": false,
      "properties": {
        "minApprovers": { "type": "integer", "minimum": 0 },
        "roles": { "type": "array", "items": { "type": "string" } },
        "twoKeyRequired": { "type": "boolean", "default": false }
      }
    },
    "audit": {
      "type": "object",
      "required": ["samplingRate"],
      "additionalProperties": false,
      "properties": {
        "samplingRate": { "type": "number", "minimum": 0, "maximum": 1 },
        "autoRevocationTriggers": { "type": "array", "items": { "type": "string" } }
      }
    },
    "notes": { "type": "string" }
  }
}
