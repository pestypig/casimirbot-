{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "receipt.schema.json",
  "title": "RungDecisionReceipt",
  "type": "object",
  "required": ["id", "workflowId", "applicantId", "rung", "status", "issuedAt", "scores", "checks", "artifacts", "approvals"],
  "additionalProperties": false,
  "properties": {
    "id": { "type": "string" },
    "workflowId": { "type": "string" },
    "applicantId": { "type": "string" },
    "rung": { "type": "string", "enum": ["R0", "R1", "R2", "R3", "R4", "R5", "R6"] },
    "status": { "type": "string", "enum": ["approved", "denied", "conditional", "revoked"] },
    "issuedAt": { "type": "string", "format": "date-time" },
    "expiresAt": { "type": "string", "format": "date-time" },
    "scores": {
      "type": "object",
      "required": ["demand", "capability", "integritySafety", "sustainability"],
      "additionalProperties": false,
      "properties": {
        "demand": { "type": "integer", "minimum": 0, "maximum": 4 },
        "capability": { "type": "integer", "minimum": 0, "maximum": 4 },
        "integritySafety": { "type": "integer", "minimum": 0, "maximum": 4 },
        "sustainability": { "type": "integer", "minimum": 0, "maximum": 4 }
      }
    },
    "checks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "status"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "status": { "type": "string", "enum": ["pass", "fail", "waived"] },
          "notes": { "type": "string" }
        }
      }
    },
    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "status"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "status": { "type": "string", "enum": ["complete", "missing", "stale"] },
          "evidenceRefs": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "approvals": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["role", "approverId", "approvedAt"],
        "additionalProperties": false,
        "properties": {
          "role": { "type": "string" },
          "approverId": { "type": "string" },
          "approvedAt": { "type": "string", "format": "date-time" }
        }
      }
    },
    "gates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "status"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "status": { "type": "string", "enum": ["pass", "fail"] }
        }
      }
    },
    "notes": { "type": "string" }
  }
}
