{
  "include": ["client/src/**/*", "shared/**/*", "server/**/*", "modules/**/*", "types/**/*.d.ts"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",
    "noEmit": true,
  "target": "ES2017",
  "downlevelIteration": true,
  "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./client/src/*"],
      "@shared/*": ["./shared/*"],
      "@shared/essence-schema": ["./shared/essence-schema.ts"],
      "@shared/essence": ["./shared/essence-schema.ts"],
      "@shared/essence-physics": ["./shared/essence-physics.ts"],
      "@shared/skills": ["./shared/skills.ts"],
      "idb": ["./node_modules/idb/build/index"]
    }
  }
}
